@model Product_MVC_Project.dtos.ProductDTO
@{
    ViewData["Title"] = "Create Product";
}
<h2>@ViewBag.Title</h2>

<form asp-action="CreateProduct" method="post" class="form-container">
    <label>Name:</label>
    <input asp-for="Name" required class="input-field" />

    <label>Price:</label>
    <input asp-for="Price" type="number" step="0.01" required class="input-field" />

    <button type="submit" class="btn btn-primary">Save</button>
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
