@model MVC_New_Project.Models.Product


<h1>Create New Product</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Name">Product Name</label>
        <input type="text" id="Name" name="Name" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Price">Price</label>
        <input type="text" id="Price" name="Price" class="form-control" asp-for="Price" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <br/>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

<a href="@Url.Action("Index")">Back to list</a>
